    <script type="text/javascript">
    $(document).ready(function () {
      $('#myForm input').on('change', function() {
        var searchVal = $('input[name=size]:checked', '#myForm').val();
      $.get("/adoptDog/search/" + searchVal, function(results){
        $("#adoptDog").html(results)

     });
    });
    });

