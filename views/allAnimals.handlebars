


      <h1 class="page-header">All Animals </h1>
  <div class="col-md-12">
      <form  id="myForm" action="/allAnimals/search/" method="POST" >
          <div class="col-md-10">

             <input id="searchBar1" class="form-control pull-left " type="text" onclick="doneTyping();"  name="searchVal" placeholder="Search.."  style="Height:35px; width:18%" >
             <a id="searchButton"  class="btn btn-primary glyphicon glyphicon-search pull-left"  value="searchVal"></a>


          </div>
        </form>
        <div class="col-md-2">
        <button type="submit" onClick="Reload()" id="btnRefresh" class="glyphicon glyphicon-repeat btn btn-primary pull-right" ></button>
      </div>
      </div>
      <div class='row'  id="allAnimals"  >

      {{#data}}

    <div class="col-lg-3 col-md-5  col-sm-6 col-xs-12 thumb" >
        <form action='/allAnimals/remove/{{id}}' method='POST'>

          <div class="well">
            <button type="submit" id="btnremove" class="glyphicon glyphicon-remove btn btn-primary pull-right" ></button>

          <div class="thumbnail">

            <div id="imageContainerDiv">
              <img class="adoptionsimages img-responsive" id="image" src="{{image}}"  alt="...">
            </div>

            <div class="caption">
              <h3>{{name}}</h3>
              <p>Age: {{age}}</p><p>Gender: {{gender}}</p>
              <p>Size: {{size}}</p>
              <p>Bio: {{bio}}</p>
              <!-- <p>Reference Code : {{refcode}}</p> -->

            </div>
          </div>
        </div>
              </form>

        </div>
    {{/data}}
  </div>




  </div>


